<StatusModalView>:
    id: status_modal
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"

        Label:
            text: status_modal.text
        Button:
            text: "OK"
            on_press: status_modal.dismiss()

<EditScreen>:
    id: edit_screen

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1

            Button:
                text: "List"
                on_press: app.root.current = "list"
            Button:
                text: str(edit_screen.price)
                on_press: carousel.index = 0
            Button:
                text: str(edit_screen.product_count)
                on_press: carousel.index = 1
            Button:
                text: "Submit"
                on_press: edit_screen.submit()

        Carousel:
            id: carousel
            scroll_timeout: 0
            size_hint_y: 0.9

            GridLayout:
                id: price_keypad
                cols: 4
            GridLayout:
                id: products_keypad
                cols: 2

<ListScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1

            Button:
                text: "Edit"
                on_press: app.root.current = "edit"
            Widget:
            Widget:
            Widget:

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.9

            Widget:
            Label:
                halign: "center"
                text: "Please open web browser and navigate to this location:"
                text_size: root.width, None
            Button:
                on_press: root._show_ip_address()
                text: "Show my IP address"
            Label:
                halign: "center"
                text: "Make sure you are in the same network"
                text_size: root.width, None
            Widget:
