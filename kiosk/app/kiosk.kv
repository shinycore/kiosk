#:include kiosk/app/components/button.kv

<Widget>:
    font_name: "kiosk/app/fonts/RobotoCondensed-Regular.ttf"
    font_size: dp(32)

<StatusModalView>:
    id: status_modal
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"

        Label:
            text: status_modal.text
        KButton:
            text: "OK"
            on_press: status_modal.dismiss()

<EditScreen>:
    id: edit_screen

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            padding: 8
            spacing: 8
            size_hint_y: 0.2

            KButton:
                on_press: app.root.current = "list"
                size_hint_x: 0.15
                text: "List"

            BoxLayout:
                orientation: "horizontal"
                size_hint_x: 0.7

                KButton:
                    on_press: carousel.index = 0
                    text: str(edit_screen.price)
                KButton:
                    on_press: carousel.index = 1
                    text: str(edit_screen.product_count)

            KButton:
                on_press: edit_screen.submit()
                size_hint_x: 0.15
                text: "Submit"

        Carousel:
            id: carousel
            scroll_timeout: 0
            size_hint_y: 0.8

            GridLayout:
                id: price_keypad
                cols: 4
            GridLayout:
                id: products_keypad
                cols: 2

<ListScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            padding: 8
            spacing: 8
            size_hint_y: 0.2

            KButton:
                on_press: app.root.current = "edit"
                size_hint_x: 0.15
                text: "Edit"
            Widget:
                size_hint_x: 0.7
            Widget:
                size_hint_x: 0.15

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.8

            Widget:
            Label:
                halign: "center"
                text: "Please open web browser and navigate to this location:"
                text_size: root.width, None
            KButton:
                on_press: root._show_ip_address()
                text: "Show my IP address"
            Label:
                halign: "center"
                text: "Make sure you are in the same network"
                text_size: root.width, None
            Widget:
