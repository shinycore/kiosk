#:include kiosk/app/components/button.kv
#:include kiosk/app/components/popup.kv

<Widget>:
    font_name: "kiosk/app/fonts/RobotoCondensed-Regular.ttf"
    font_size: dp(32)

<EditScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            padding: 8
            spacing: 8
            size_hint_y: 0.2

            KIconButton:
                icon_text: "\ue889"
                on_press: app.root.current = "list"
                size_hint_x: 0.15

            BoxLayout:
                orientation: "horizontal"
                size_hint_x: 0.7

                KIconButton:
                    icon_text: "\uef63"
                    on_press: carousel.index = 0
                    text: str(root.price)
                KIconButton:
                    icon_text: "\ue8cc"
                    on_press: carousel.index = 1
                    text: str(root.product_count)

            KIconButton:
                icon_text: "\ue5ca"
                on_press: root.submit()
                size_hint_x: 0.15

        Carousel:
            id: carousel
            scroll_timeout: 0
            size_hint_y: 0.8

            GridLayout:
                id: price_keypad
                cols: 4
            GridLayout:
                id: products_keypad
                cols: 2

<ListScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            padding: 8
            spacing: 8
            size_hint_y: 0.2

            KIconButton:
                icon_text: "\ue5c4"
                on_press: app.root.current = "edit"
                size_hint_x: 0.15
            Widget:
                size_hint_x: 0.7
            Widget:
                size_hint_x: 0.15

        BoxLayout:
            orientation: "vertical"
            padding: 8
            size_hint_y: 0.8

            Label:
                halign: "center"
                size_hint_y: 0.75
                text: "You can access saved items using web browser on your PC"
                text_size: self.width, None
            KButton:
                on_press: root._show_ip_address()
                size_hint_y: 0.25
                text: "Show my IP address(es)"
